//3.a example 3.13

//passing color& weight,posx,posy,size- 5 parameters

void setup()
{
  size(100,100);
}

void draw()
{
 background(204);
 cross(0,30,40,30,36); // parameter
}

void cross(int gray , int weight, int x, int y, int size) //5 parameters
{
 stroke(gray);       //parameter
 strokeWeight(weight);

 line(x,y,x+size,y+size);
 line(x+size,y,x,y+size);
}
