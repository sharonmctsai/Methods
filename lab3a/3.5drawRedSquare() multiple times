//3.a example 3.5
//with parameters
//call the drawRedSquare() multiple times (using a loop). 

void setup()
{
size(200,200);
background(20,70,105);
}

void draw()
{
 for(int i =1 ; i< 7 ; i++)
  {
   drawRedSquare(25, i*25, i*20);  
  }
  
}

void drawRedSquare( int length , int xCoord, int yCoord)
{
   fill(255,0,0);
   square( xCoord, yCoord, length);
}
