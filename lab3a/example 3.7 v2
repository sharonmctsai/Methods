//3.a example 3.7 v2

//drawing a single eye

void setup()
{
 size(100,100);
 noStroke();
}

void draw()
{
 background(204);
 eye(65,44);
}

void eye(int x, int y)
{
 fill(255);       //outer white circle
 circle(x,y,60);
 
 fill(0);        //black circle
 circle(x+10,y,30);
 
 fill(255);      //inner white curcle
 circle(x+16,y,6);
 
  
}
